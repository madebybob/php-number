{
    "name": "madebybob/php-number",
    "description": "Deal with numbers the right way",
    "keywords": [
        "madebybob",
        "php-number"
    ],
    "homepage": "https://github.com/madebybob/php-number",
    "license": "MIT",
    "authors": [
        {
            "name": "Bob Mulder",
            "email": "info@madebybob.nl",
            "homepage": "https://madebybob.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Madebybob\\Number\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Madebybob\\Number\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
